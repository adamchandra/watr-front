{
  "name": "@watr/codemorphs",
  "version": "1.0.0",
  "private": false,
  "license": "ISC",
  "description": "Utilities to generate and manipulate typescript code",
  "keywords": [],
  "author": "Adam Saunders <saunders@cs.umass.edu>",
  "main": "./dist/main.js",
  "dependencies": {
    "bluebird": "^3.7.2",
    "commander": "^9.4.0",
    "fs-extra": "^10.1.0",
    "ts-morph": "^15.1.0"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@types/bluebird": "^3.5.36",
    "@types/chai": "^4.3.3",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "28.1.6",
    "@types/lodash": "^4.14.182",
    "@types/node": "18.7.4",
    "@types/split": "^1.0.1",
    "@types/through2": "^2.0.36",
    "@types/yargs": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "rollup-plugin-ts": "^3.0.2",
    "chai": "^4.3.6",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.3",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-unicorn": "^43.0.2",
    "jest": "28.1.3",
    "lodash": "^4.17.21",
    "rollup": "~2.78.0",
    "typescript": "^4.7.4"
  },
  "scripts": {
    "clean": "rm -rf ./dist",
    "compile": "tsc",
    "path-rewrite": "../root/bin/fix-path-aliases -f dist",
    "build": "rushx compile && rushx path-rewrite",
    "build:watch": "rushx build",
    "rebuild": "rushx clean && rushx build",
    "lint": "eslint ./src",
    "lint:fix": "eslint src/ --fix",
    "test": "jest --runInBand"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/src/$1"
    }
  }
}
