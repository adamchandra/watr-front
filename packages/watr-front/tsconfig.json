{
  "$schema": "http://json.schemastore.org/tsconfig",

  "extends": "./.nuxt/tsconfig.json",

  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "types": ["heft-jest"],

    "lib": ["ESNext", "dom"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["node_modules", "dist"]
}
