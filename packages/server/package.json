{
  "name": "@watr/server",
  "version": "1.0.0",
  "license": "ISC",
  "private": false,
  "description": "Backend server for WatrColors",

  "main": "dist/main.js",
  "module": "dist/main.mjs",

  "keywords": [],
  "scripts": {
    "tsup": "tsup src/main.ts --format cjs,esm --dts",
    "build": "heft build && npm run tsup",
    "rebuild": "heft build --clean && npm run tsup",
    "ui:run": "node ./dist/main corpus-server --corpus-root ../../../active-corpus.d"
  },
  "dependencies": {
    "@watr/commonlib-node": "*",
    "@watr/commonlib-shared": "*",
    "bluebird": "^3.7.2",
    "fs-extra": "^11.1.0",
    "koa": "^2.13.4",
    "koa-body": "^6.0.1",
    "koa-bodyparser": "^4.3.0",
    "koa-ejs": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-router": "^12.0.0",
    "koa-send": "^5.0.1",
    "lodash": "^4.17.21",
    "winston": "^3.8.2",
    "yargs": "^17.6.2"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.38",
    "@types/chai": "^4.3.4",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "29.2.3",
    "@types/koa": "^2.13.5",
    "@types/koa-json": "^2.0.20",
    "@types/koa-router": "^7.4.4",
    "@types/koa-send": "^4.1.3",
    "@types/lodash": "^4.14.191",
    "@types/node": "18.11.10",
    "eslint": "^8.29.0",
    "typescript": "^4.9.3",
    "@rushstack/heft": "~0.49.6",
    "@rushstack/heft-jest-plugin": "~0.5.3",
    "@rushstack/eslint-config": "~3.1.1",
    "@types/heft-jest": "~1.0.3"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/src/$1"
    }
  }
}
