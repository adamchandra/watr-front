{
  "name": "@watr/server",
  "version": "1.0.0",
  "license": "ISC",
  "private": false,
  "description": "Backend server for WatrColors",
  "keywords": [],
  "scripts": {
    "clean": "rm -rf ./dist",
    "compile": "tsc",
    "path-rewrite": "../root/bin/fix-path-aliases -f dist",
    "build": "rushx compile && rushx path-rewrite",
    "build:watch": "rushx build",
    "rebuild": "rushx clean && rushx build",
    "lint": "eslint ./src",
    "lint:fix": "eslint src/ --fix",
    "test": "jest --runInBand",
    "ui:run": "node ./dist/server.js corpus-server --corpus-root ../../../watr-works/corpus.d",
    "ui:dev": "node ./dist/server.js corpus-server --corpus-root ../../../watr-works/corpus.d"
  },
  "dependencies": {
    "@types/bluebird": "^3.5.36",
    "@watr/commonlib-node": "*",
    "@watr/commonlib-shared": "*",
    "bluebird": "^3.7.2",
    "fs-extra": "^10.1.0",
    "koa": "^2.13.4",
    "koa-body": "^5.0.0",
    "koa-bodyparser": "^4.3.0",
    "koa-ejs": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-router": "^12.0.0",
    "koa-send": "^5.0.1",
    "lodash": "^4.17.21",
    "winston": "^3.8.1",
    "yargs": "^17.5.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.2",
    "@types/chai": "^4.3.3",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "28.1.6",
    "@types/koa": "^2.13.5",
    "@types/koa-json": "^2.0.20",
    "@types/koa-router": "^7.4.4",
    "@types/koa-send": "^4.1.3",
    "@types/lodash": "^4.14.182",
    "@types/node": "18.7.4",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "chai": "^4.3.6",
    "eslint": "^8.22.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.3",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-unicorn": "^43.0.2",
    "jest": "28.1.3",
    "rollup": "~2.78.0",
    "rollup-plugin-ts": "^3.0.2",
    "typescript": "^4.7.4"
  },
  "jest": {
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/src"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1",
      "^~/(.*)$": "<rootDir>/src/$1"
    }
  }
}
